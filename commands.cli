        @sh(echo "Testing goProject..."; nix run .#goProject -- --help >/dev/null || echo "âš ï¸  goProject help issues");
    };
    @parallel {
        @sh(echo "Testing rustProject..."; nix run .#rustProject -- --help >/dev/null || echo "âš ï¸  rustProject help issues");
        @sh(echo "Testing dataScienceProject..."; nix run .#dataScienceProject -- --help >/dev/null || echo "âš ï¸  dataScienceProject help issues");
        @sh(echo "Testing devOpsProject..."; nix run .#devOpsProject -- --help >/dev/null || echo "âš ï¸  devOpsProject help issues");
    };
    echo "âœ… Example CLI tests passed!";
}

# Run Nix-based tests
nix-test: {
    echo "ğŸ§ª Running Nix-based tests...";
    nix build .#tests --print-build-logs;
    echo "Building example tests...";
    @sh(nix build .#test-examples --print-build-logs || echo "âš ï¸  Example tests not available");
    echo "âœ… Nix tests completed";
