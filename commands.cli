# Devcmd Development Commands
# Showcasing real-world usage of our own tool

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================

def PROJECT = devcmd;
def GRAMMAR_DIR = grammar;
def GEN_DIR = internal/gen;
def VERSION = $(git describe --tags --always --dirty 2>/dev/null || echo 'dev');
def BUILD_TIME = $(date -u +%Y-%m-%dT%H:%M:%SZ);
def GO_VERSION = 1.22;

# =============================================================================
# ğŸš€ QUICK START & CORE COMMANDS
# =============================================================================

# Project setup and initialization
setup: {
    echo "ğŸ”§ Setting up @var(PROJECT) development environment...";
    echo "ğŸ“ Generating ANTLR parser...";
    dev grammar;
    echo "ğŸ“¦ Downloading Go dependencies...";
    go mod download;
    go mod verify;
    echo "âœ… Setup complete! Run 'dev test' to verify.";
}

# Generate ANTLR parser
grammar: {
    echo "ğŸ“ Generating ANTLR parser...";
    rm -rf @var(GEN_DIR);
    mkdir -p @var(GEN_DIR);
    @sh(cd @var(GRAMMAR_DIR) && antlr4 -Dlanguage=Go -package gen -listener -visitor -o ../@var(GEN_DIR) DevcmdLexer.g4 DevcmdParser.g4);
    echo "Generated files:";
    @sh(ls -la ../@var(GEN_DIR)/);
    echo "âœ… Parser generated";
}

# Build the CLI
build: {
    echo "ğŸ”¨ Building @var(PROJECT) CLI...";
    @sh(if [ ! -f @var(GEN_DIR)/devcmd_lexer.go ]; then echo "âš ï¸  ANTLR parser not found, generating..."; dev grammar; fi);
    go build -ldflags="-s -w -X main.Version=@var(VERSION) -X main.BuildTime=@var(BUILD_TIME)" -o @var(PROJECT) ./cmd/@var(PROJECT);
    echo "âœ… Built: ./@var(PROJECT)";
}

# =============================================================================
# ğŸ§ª TESTING COMMANDS (ordered by execution speed)
# =============================================================================

test-quick: {
    echo "âš¡ Running quick checks...";
    echo "ğŸ” Checking Go formatting...";
    @sh(if command -v gofumpt >/dev/null 2>&1; then if [ "$(gofumpt -l . | wc -l)" -gt 0 ]; then echo "âŒ Go formatting issues:"; gofumpt -l .; exit 1; fi; else if [ "$(gofmt -l . | wc -l)" -gt 0 ]; then echo "âŒ Go formatting issues:"; gofmt -l .; exit 1; fi; fi);
    echo "ğŸ” Checking Nix formatting...";
    @sh(if command -v nixpkgs-fmt >/dev/null 2>&1; then nixpkgs-fmt --check . || (echo "âŒ Run 'dev format' to fix"; exit 1); else echo "âš ï¸  nixpkgs-fmt not available, skipping Nix format check"; fi);
    dev lint;
    echo "âœ… Quick checks passed!";
}

# Go unit tests with coverage
test-go: {
    echo "ğŸ§ª Running Go tests with coverage...";
    @sh(if [ ! -f @var(GEN_DIR)/devcmd_lexer.go ]; then echo "âš ï¸  ANTLR parser not found, generating..."; dev grammar; fi);
    go test -race -coverprofile=coverage.out -covermode=atomic ./...;
    @sh(if command -v go >/dev/null 2>&1; then go tool cover -html=coverage.out -o coverage.html; echo "ğŸ“Š Coverage report: coverage.html"; fi);
    echo "âœ… Go tests passed!";
}

# Build and test binaries
test-build: {
    echo "ğŸ”¨ Building and testing binaries...";
    dev build;
    echo "ğŸ§ª Testing built binary...";
    ./@var(PROJECT) --help;
    @sh(./@var(PROJECT) --version || echo "âš ï¸  Version command not available");
    echo "âœ… Binary tests passed!";
}

# Nix package tests
test-nix: {
    echo "ğŸ“¦ Testing Nix packages...";
    echo "Building core package...";
    nix build .#@var(PROJECT) --print-build-logs;
    echo "Testing core package...";
    ./result/bin/@var(PROJECT) --help;
    echo "Basic flake check...";
    nix flake check --no-build;
    echo "âœ… Nix core tests passed!";
}

# Complete test suite
test-all: {
    echo "ğŸ§ª Running complete test suite...";
    dev test-quick;
    dev test-go;
    dev test-build;
    dev test-nix;
    dev test-examples;
    echo "ğŸ‰ All tests passed!";
}

# Run basic Go tests (for quick feedback)
test: {
    echo "ğŸ§ª Running Go unit tests...";
    @sh(if [ ! -f @var(GEN_DIR)/devcmd_lexer.go ]; then echo "âš ï¸  ANTLR parser not found, generating..."; dev grammar; fi);
    go test ./...;
}

# Run parser tests only
test-parser: {
    echo "ğŸ§ª Running parser tests...";
    go test -v ./pkgs/parser;
}

# Run generator tests only
test-generator: {
    echo "ğŸ§ª Running generator tests...";
    go test -v ./pkgs/generator;
}

# Run tests with coverage (alias for test-go)
cover: {
    echo "ğŸ“Š Running tests with coverage...";
    dev test-go;
}

# =============================================================================
# ğŸ“ CODE QUALITY COMMANDS
# =============================================================================

# Format all code
format: {
    echo "ğŸ“ Formatting all code...";
    echo "Formatting Go code...";
    @parallel {
        @sh(if command -v gofumpt >/dev/null 2>&1; then gofumpt -w .; else go fmt ./...; fi);
        @sh(if command -v nixpkgs-fmt >/dev/null 2>&1; then find . -name '*.nix' -exec nixpkgs-fmt {} +; else echo "âš ï¸  nixpkgs-fmt not available"; fi);
    };
    echo "âœ… Code formatted!";
}

# Run linters
lint: {
    echo "ğŸ” Running linters...";
    @sh(if command -v golangci-lint >/dev/null 2>&1; then golangci-lint run --timeout=5m; else echo "âš ï¸  golangci-lint not installed, running basic checks"; go vet ./...; go fmt ./...; fi);
    echo "âœ… Linting complete!";
}

# Quick checks (format + lint)
check: {
    echo "âš¡ Running quick checks...";
    dev format;
    dev lint;
    echo "âœ… Quick checks passed";
}

# Clean build artifacts
clean: {
    echo "ğŸ§¹ Cleaning generated files and artifacts...";
    rm -f @var(PROJECT) coverage.out coverage.html;
    rm -rf result result-* artifacts/ release/;
    @sh(go clean -cache -modcache -testcache || echo "Go clean completed with warnings");
    echo "âœ… Cleanup complete";
}

# =============================================================================
# ğŸ“¦ NIX INTEGRATION
# =============================================================================

# Build core Nix packages
nix-build: {
    echo "ğŸ“¦ Building core Nix packages...";
    nix build .#@var(PROJECT) --print-build-logs;
    echo "âœ… Core packages built";
}

